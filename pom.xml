<project xmlns="http://maven.apache.org/POM/4.0.0"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <build>
    <plugins>
      <plugin>
	<artifactId>maven-compiler-plugin</artifactId>
	<configuration>
	  <source>1.5</source>
	  <target>1.5</target>
	</configuration>
      </plugin>
      <plugin>
	<artifactId>maven-assembly-plugin</artifactId>
	<version>2.2-beta-2</version>
	<configuration>
	  <descriptorRefs>
	    <descriptorRef>jar-with-dependencies</descriptorRef>
	  </descriptorRefs>
	  <descriptors>
	    <descriptor>src/main/assembly/jar-with-dependencies.xml</descriptor>
	  </descriptors>
	  <archive>
	    <manifest>
	      <mainClass>org.nrg.dcm.browse.DicomBrowser</mainClass>
	    </manifest>
	  </archive>
	</configuration>
      </plugin>
    </plugins>
    <resources>
      <resource>
	<directory>src/main/resources</directory>
	<filtering>true</filtering>
      </resource>
      <resource>
	<directory>src/main/sh</directory>
	<filtering>true</filtering>
      </resource>
    </resources>
  </build>
  <groupId>org.nrg</groupId>
  <artifactId>DicomBrowser</artifactId>
  <packaging>jar</packaging>
  <version>1.4-SNAPSHOT</version>
  <name>DicomBrowser</name>
  <url>http://nrg.wustl.edu/projects/DICOM/DicomBrowser.jsp</url>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.0</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.15</version>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>1.5.0</version>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-log4j12</artifactId>
      <version>1.5.0</version>
    </dependency>
    <dependency>
      <groupId>org.nrg</groupId>
      <artifactId>DicomEdit</artifactId>
      <version>1.0-SNAPSHOT</version>
    </dependency>
    <dependency>
      <!-- Apple library for Mac-specific GUI -->
      <!-- Use a repository copy to compile against on non-Macs, -->
      <!-- but don't include it in the assembly for runtime -->
      <groupId>com.apple</groupId>
      <artifactId>ui</artifactId>
      <version>1.5.0</version>
      <scope>system</scope>
      <systemPath>${user.home}/.m2/repository/com/apple/ui/1.5.0/ui-1.5.0.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>ij</groupId>
      <artifactId>ij</artifactId>
      <version>1.40g</version>
    </dependency>
    <dependency>
      <groupId>org.ostermiller</groupId>
      <artifactId>ostermillerutils</artifactId>
      <version>1.07</version>
    </dependency>
    <dependency>
      <groupId>dom4j</groupId>
      <artifactId>dom4j</artifactId>
      <version>1.6.1</version>
    </dependency>
    <dependency>
      <groupId>org.nrg</groupId>
      <artifactId>DicomDB</artifactId>
      <version>1.1</version>
    </dependency>
    <dependency>
      <groupId>net.sf.json-lib</groupId>
      <artifactId>json-lib</artifactId>
      <version>2.2.1</version>
      <classifier>jdk15</classifier>
    </dependency>
    <dependency>
      <groupId>commons-cli</groupId>
      <artifactId>commons-cli</artifactId>
      <version>1.1</version>
    </dependency>
  </dependencies>
</project>
