<assembly>
	<id>bin-distrib</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
		</dependencySet>
	</dependencySets>
	<files>
		<file>
			<source>target/${pom.name}-${pom.version}.jar</source>
			<outputDirectory>lib</outputDirectory>
		</file>
		<file>
			<source>src/main/bin/DicomBrowser.bat</source>
			<outputDirectory>bin</outputDirectory>
			<lineEnding>dos</lineEnding>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>src/main/bin/DicomBrowser.sh</source>
			<destName>DicomBrowser</destName>
			<outputDirectory>bin</outputDirectory>
			<lineEnding>unix</lineEnding>
			<fileMode>0755</fileMode>
		</file>
	</files>
</assembly>